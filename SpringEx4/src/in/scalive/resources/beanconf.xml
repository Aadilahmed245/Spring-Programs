<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

     <bean class="in.scalive.beans.Laptop" id="lpObj">
          <property name="brand" value="Dell"> </property>
     </bean>
     <bean class="in.scalive.beans.Programmer" name="prog"> 
          <property name="name" value="Adil Qureshi"> </property>
          <property name="lap" ref="lpObj"> </property>
     </bean>

</beans>